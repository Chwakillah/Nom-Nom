<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:ignore="MissingConstraints">
            <ImageView
                android:id="@+id/iv_foodPic"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:src="@drawable/babat"
                android:scaleType="centerCrop"
                />
            <ImageView
                android:id="@+id/iv_btnBack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/baseline_arrow_back_24"
                android:padding="16dp"/>
            <ImageView
                android:id="@+id/action_share"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/baseline_share_24"
                android:padding="16dp"
                app:layout_constraintEnd_toEndOf="parent"/>
            <ImageView
                android:id="@+id/like"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/baseline_favorite_24"
                android:padding="16dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/action_share"/>
            <TextView
                android:id="@+id/tv_foodTitle"
                style="@style/textTitle"
                android:paddingStart="8dp"
                android:paddingTop="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="@string/title_detail"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/iv_foodPic"/>
            <TextView
                android:id="@+id/tv_descriptionDetail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/textDescription"
                android:paddingStart="8dp"
                android:paddingTop="8dp"
                tools:text="@string/description_detail"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_foodTitle"/>
            <TextView
                android:id="@+id/tv_reviewTitle"
                style="@style/textTitle"
                android:paddingStart="8dp"
                android:paddingTop="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="@string/Review"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_descriptionDetail"/>
            <ImageView
                android:id="@+id/star_rating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/baseline_star_24"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_reviewTitle"
                android:paddingStart="8dp" />

            <TextView
                android:id="@+id/rating_points"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                style="@style/textDescription"
                android:paddingStart="8dp"
                tools:text="4.5"
                app:layout_constraintStart_toEndOf="@id/star_rating"
                app:layout_constraintTop_toTopOf="@id/star_rating" />

            <TextView
                android:id="@+id/tv_descriptionReview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/textDescription"
                android:paddingStart="8dp"
                android:paddingTop="8dp"
                tools:text="@string/detail_review"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/star_rating"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>